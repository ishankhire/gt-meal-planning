generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// User model - core user info from authentication
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  preferences   UserPreferences?
  foodRatings   FoodRating[]
  emailSubscription EmailSubscription?
}

// User Preferences - meal planning settings per user
model UserPreferences {
  id              String   @id @default(cuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  dailyCalories   Int      @default(2000)
  dailyProtein    Int      @default(50)
  fitnessGoal     String   @default("maintenance") // cutting, bulking, maintenance
  appetite        String   @default("medium")      // small, medium, large
  restrictions    String?                          // Free text for dietary restrictions

  // Dietary filters
  vegetarian      Boolean  @default(false)
  vegan           Boolean  @default(false)
  eggless         Boolean  @default(false)
  glutenFree      Boolean  @default(false)
  noDairy         Boolean  @default(false)

  // Nutritional filters
  highCalorie     Boolean  @default(false)
  lowCalorie      Boolean  @default(false)
  proteinRich     Boolean  @default(false)
  lowFat          Boolean  @default(false)
  nutrientRich    Boolean  @default(false)

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

// Food Ratings - like/dislike per user per food item
model FoodRating {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  foodName  String                    // Lowercase food name as key
  rating    String                    // "like" or "dislike"

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, foodName])        // One rating per user per food
  @@index([userId])
  @@index([foodName])
}

// Email Subscription - opt-in status for daily meal emails
model EmailSubscription {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  optedIn   Boolean  @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Nutrition Cache - cached nutrition data for food items
model NutritionCache {
  id          String   @id @default(cuid())
  foodName    String   @unique          // Lowercase food name as key

  calories    Int
  protein     Int
  carbs       Int
  fat         Int
  tags        String[] @default([])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([foodName])
}
